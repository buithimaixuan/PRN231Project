@model Client.ViewModel.RegisterExpertViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link rel="stylesheet" href="~/css/RegisterExpert.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/1bd9fa3a2e.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <a asp-action="Index" asp-controller="Authen" class="logo">
            <img src="~/image/logo.jpg" alt="">
        </a>
    </header>

    <main>
        <div class="container-register register-expert">

            <form method="post" class="form-register form-register-expert" asp-action="RegisterExpert" asp-controller="Authen" enctype="multipart/form-data">

                <!-- LEFT FORM  -->
                <div class="personal-infor">
                    <h1 class="title">Personal Information</h1>

                    <div class="form-floating form-fullname">
                        <input asp-for="FullName" type="text" placeholder="Full name" id="floatingFullname"
                               class="fullname inputRegister form-control">
                        <label for="floatingFullname">Full name</label>

                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-dob">
                        <input asp-for="DateOfBirth" type="date" placeholder="Birthday" id="floatingDob"
                               class="dateOfBirth inputRegister form-control">
                        <label for="floatingDob">Birthday</label>

                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-gender">
                        <div class="gender-field">
                            <label class="label-label" for="gender-options">Gender:</label>
                            <div class="gender-options" id="gender-options">
                                <div class="male-option">
                                    <input type="radio" id="male" asp-for="Gender" value="Male">
                                    <label for="male">Male</label>
                                </div>
                                <div class="female-option">
                                    <input type="radio" id="female" asp-for="Gender" value="Female">
                                    <label for="female">Female</label>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-phone">
                        <input asp-for="PhoneNumber" type="text" placeholder="Phone" id="floatingPhone"
                               class="phone inputRegister form-control">
                        <label for="floatingPhone">Phone</label>

                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-email">
                        <input asp-for="Email" type="email" placeholder="Email" id="floatingEmail"
                               class="email inputRegister form-control">
                        <label for="floatingEmail">Email</label>

                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-address">
                        <textarea asp-for="Address" placeholder="Address" id="floatingAddress" class="address inputRegister form-control" style="height: 80px;"></textarea>
                        <label for="floatingAddress">Address</label>

                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-username">
                        <input asp-for="Username" type="text" placeholder="Username" id="floatingUsername"
                               class="username inputRegister form-control">
                        <label for="floatingUsername">Username</label>

                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-password">
                        <input asp-for="Password" type="password" placeholder="Password" id="floatingPass"
                               class="password inputRegister form-control">
                        <label for="floatingPass">Password</label>

                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-repassword">
                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm password" id="floatingRepass"
                               class="password form-control">
                        <label for="floatingRepass">Confirm Password</label>

                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="back-login">
                        <a asp-action="Index" asp-controller="Authen"><i class="fa-regular fa-hand-point-left"></i> Back to login page</a>
                    </div>
                </div>

                <!-- RIGHT FORM  -->
                <div class="contact-infor">
                    <h1 class="title">Contact Information</h1>

                    <div class="form-floating form-major">
                        <input asp-for="Major" type="text" placeholder="Major" id="floatingMajor"
                               class="major inputRegister form-control">
                        <label for="floatingMajor">Major</label>

                        <span asp-validation-for="Major" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-yoe">
                        <input asp-for="YearOfExperience" type="number" placeholder="Year of experience" id="floatingYoe"
                               class="yoe inputRegister form-control">
                        <label for="floatingYoe">Year of experience</label>

                        <span asp-validation-for="YearOfExperience" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-shortBio">
                        <input asp-for="ShortBio" type="text" placeholder="Short Bio" id="floatingShortBio"
                               class="shortBio inputRegister form-control">
                        <label for="floatingShortBio">Short Bio</label>

                        <span asp-validation-for="ShortBio" class="text-danger"></span>
                    </div>

                    <div class="form-floating fileEducation">
                        <div class="file-wrapper">
                            <div>
                                <label class="labelEducation" for="fileEducation">Education</label>
                            </div>
                            <input class="file-input" type="file" id="fileEducation" asp-for="fileEducation">
                        </div>
                        <span asp-validation-for="fileEducation" class="text-danger"></span>
                    </div>

                    <div class="form-floating fileDegree">
                        <div class="file-wrapper">
                            <div>
                                <label for="fileDegree">Degree</label>
                            </div>
                            <input class="file-input" type="file" id="fileDegree" asp-for="fileDegree">
                        </div>
                        <span asp-validation-for="fileDegree" class="text-danger"></span>
                    </div>

                    <div class="form-floating fileAvatar">
                        <div class="file-wrapper">
                            <div>
                                <label for="fileAvatar">Avatar</label>
                            </div>
                            <input class="file-input" type="file" id="fileAvatar" asp-for="fileAvatar">
                        </div>
                        <span asp-validation-for="fileAvatar" class="text-danger"></span>
                    </div>

                    <div class="field button-field">
                        <button type="submit">Register</button>
                    </div>
                </div>

            </form>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</body>

</html>