    bool hasReceivedRequest = Model != null && Model.friendRequestSenders != null && Model.friendRequestSenders.Any(fr => fr.SenderId == Model.accountDTO.AccountId && fr.ReceiverId == accountIDLogin && fr.RequestStatus == "pending");
